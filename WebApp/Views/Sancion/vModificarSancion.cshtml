@using WebApp.Helpers;

@{
    ViewBag.Title = "Modificar Sanción";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<!-- Styles -->
@section Styles {
    @Styles.Render("~/Content/form")
}

<!-- Scripts -->
@section Scripts {
    @Scripts.Render("~/Scripts/form")
    <script src="~/Scripts/Views/Sancion/vModificarSancion.js"></script>
}

<!-- Page Content -->
<div class="col-md-6">
    <div class="card mb-3">
        <div class="card-header"><i class="fa fa-wpforms"></i>Actualizar Sanción</div>
        <div class="card-body">
            <div class="row">
                <div class="col-lg-12">
                    <form id="frmEdition">
                        @Html.CtrlInput(id: "nId", type: "number", label: "Sanción Número", columnDataName: "Id", onlyread: true)
                        @Html.CtrlInput(id: "txtSancion", type: "text", label: "Detalle de la sanción", columnDataName: "Descripcion", placeHolder: "Digite una descripción")
                        @Html.CtrlInput(id: "nMulta", type: "number", label: "Monto de la multa", columnDataName: "Multa", placeHolder: "Digite el monto de la multa")
                        @Html.CtrlComboBox(id: "cbTerminales", label: "Terminal", columnDataName: "TerminalId")
                        @Html.CtrlDatetimePicker(id: "datetimepick", format: "YYYY-MM-DDTHH:mm:ss", label: "Fecha", columnDataName: "Fecha")
                        @Html.CtrlCheckBox(id: "chbSuspencion", label: "Aplicar suspención", columnDataName: "Suspencion")
                        @Html.CtrlDatetimePicker(id: "datetimepick2", format: "YYYY-MM-DDTHH:mm:ss", label: "Fecha de Reactivación", columnDataName: "FechaReactivacion")
                        @Html.CtrlComboBox(id: "cbEmpresa", label: "Empresa", columnDataName: "Empresa")
                        @Html.CtrlButton(viewName: "vModificarSancion", id: "btnRegistrarS", label: "Actualizar", onClickFunction: "Create", buttonType: "success")
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

