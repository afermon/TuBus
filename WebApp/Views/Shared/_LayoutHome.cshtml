<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="TuBus">
    <meta name="author" content="Eagle Coding">

    <!-- Favicons -->
    <link rel="apple-touch-icon" sizes="180x180" href="~/img/icons/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/img/icons/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/img/icons/favicon-16x16.png">
    <link rel="manifest" href="~/img/icons/site.webmanifest">
    <link rel="mask-icon" href="~/img/icons/safari-pinned-tab.svg" color="#5bbad5">
    <link rel="shortcut icon" href="~/img/icons/favicon.ico">
    <meta name="msapplication-TileColor" content="#ffffff">
    <meta name="msapplication-config" content="~/img/icons/browserconfig.xml">
    <meta name="theme-color" content="#ffffff">

    <title>@ViewBag.Title - TuBus</title>

    <!-- Styles -->
    @Styles.Render("~/Content/css")
    @RenderSection("Styles", required: false)
    
    <!-- JavaScripts -->
    @Scripts.Render("~/Scripts/js")
    @RenderSection("Scripts", required: false)
</head>
<body class="fixed-nav sticky-footer-body">
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top navbar-home">
        <div class="container">
            <a class="navbar-brand" href="/"><img src="~/img/tubus-navbar-logo.png" height="25"></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item @(ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")">
                        @Html.ActionLink("Inicio", "Index", "Home", new { @class = "nav-link" })
                    </li>
                    <li class="nav-item @(ViewContext.RouteData.Values["Action"].ToString() == "vMapa" ? "active" : "")">
                        @Html.ActionLink("Mapa", "vMapa", "Home", new { @class = "nav-link" })
                    </li>
                    <li class="nav-item @(ViewContext.RouteData.Values["Action"].ToString() == "vSolicitarTarjetaConvenio" ? "active" : "")">
                        @Html.ActionLink("Convenio", "vSolicitarTarjetaConvenio", "Home", new { @class = "nav-link" })
                    </li>
                    <li class="nav-item @(ViewContext.RouteData.Values["Action"].ToString() == "vRegistarEmpresa" ? "active" : "")">
                        @Html.ActionLink("Empresa", "vRegistrarEmpresa", "Home", new { @class = "nav-link" })
                    </li>
                    <li class="nav-item @(ViewContext.RouteData.Values["Action"].ToString() == "vHorarios" ? "active" : "")">
                        @Html.ActionLink("Horarios", "vHorarios", "Home", new { @class = "nav-link" })
                    </li>
                    <li class="nav-item @(ViewContext.RouteData.Values["Action"].ToString() == "vParqueo" ? "active" : "")">
                        @Html.ActionLink("Parqueos", "vParqueo", "Home", new { @class = "nav-link" })
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    @RenderBody()

    <!-- Footer -->
    <footer class="bg-dark sticky-footer-home">
        <div class="container">
            <p class="m-0 text-center text-white">Copyright &copy; Eagle Coding 2018</p>
        </div>
    </footer>

    <!-- Alert Modal -->
    <div class="modal hide fade" id="AlertModal" tabindex="-2" role="dialog" aria-labelledby="AlertModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="AlertModalLabel">@ViewBag.Title</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">Houston, we have a problem!</div>
                <div class="modal-footer">
                    <button id="acept" class="btn btn-secondary" type="button" data-dismiss="modal">Aceptar</button>
                </div>
            </div>
        </div>
    </div>

    <!-- JavaScripts -->
    @Scripts.Render("~/Scripts/js-body")
    @RenderSection("FinalScripts", required: false)
</body>
</html>